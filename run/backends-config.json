{
    "testapp": {
        "label": "Test-App",
        "description": "Some sample app",
        "host": "testapp",
        "port": 3210,
        "image": "rpi-workstation:5000/radshift-testapp:latest",
        "entry": "",
        "security": {
            "rules": [
                {
                    "resourceMatcher": "\/protected.*",
                    "authenticated": true
                },
                {
                    "resourceMatcher": ".*admin.*",
                    "permissions": [
                        "admin"
                    ],
                    "mappings": {
                        "name": "X-User",
                        "scope": "X-Roles"
                    }
                }
            ],

            "authenticated": true,
            "mappings": {
                "name": "X-User",
                "scope": "X-Roles"
            }
        }
    },

    "streamnomorefam": {
        "label": "StreamNoMoreFam",
        "description": "Download video & audio from streams",
        "host": "streamnomorefam",
        "name": "streamnomorefam",
        "port": 3009,
        "image": "rpi-workstation:5000/radshift-stream-downloader:latest",
        "entry": "",
        "security": {
            "rules": [
                {
                    "resourceMatcher": "\/api\/",
                    "authenticated": true
                }
            ],
            "mappings": {
                "name": "X-User",
                "scope": "X-Roles"
            }
        }
    }
}